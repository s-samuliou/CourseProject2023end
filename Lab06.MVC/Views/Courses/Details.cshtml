@model Lab06.MVC.DAL.Entities.CourseEntity

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="card" style="max-width: 800px; margin: 0 auto;">
        <h1 class="card-header">Details</h1>

        <div class="card-body">
            <h4 class="card-title">Course</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Credits)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Credits)
                </dd>
            </dl>
        </div>

        <div class="card-footer">
            <div>
                @if (User.IsInRole("admin"))
                {
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                }
                <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
