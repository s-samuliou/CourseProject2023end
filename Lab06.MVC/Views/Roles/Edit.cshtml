@using Microsoft.AspNetCore.Identity
@model Lab06.MVC.ViewModels.ChangeRoleViewModel

<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Changing roles for user @Model.UserEmail</h2>

            <form asp-action="Edit" method="post">
                <input type="hidden" name="userId" value="@Model.UserId" />

                <div class="form-group">
                    @foreach (IdentityRole role in Model.AllRoles)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="roles" value="@role.Name"
                                   @(Model.UserRoles.Contains(role.Name) ? "checked" : "") id="@role.Name" />
                            <label class="form-check-label" for="@role.Name">
                                @role.Name
                            </label>
                        </div>
                    }
                </div>

                <button type="submit" class="btn btn-outline-primary btn-lg">Save</button>
            </form>
        </div>
    </div>
</div>
